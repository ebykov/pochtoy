@import 'fonts'
@import 'mq'
@import 'functions'
@import 'keyframes'

$colors = {
  red: #FF3939,
  yellow: #FFE750,
}

.pochtoy
  position: relative
  z-index: 99
  width: 1060px
  max-width: 100%
  font-family: 'Roboto', monospace
  font-size: 16px
  line-height: normal
  text-size-adjust: 100%

  & *
  & *:before
  & *:after
    box-sizing: border-box

  svg
    display block
    fill currentColor
    pointer-events none

  & b
    font-weight: 700

  & button
    font-family: inherit
    outline: none
    cursor: pointer
    appearance: none

  &-btn
    width: 150px
    height: 45px
    padding: 0 10px
    color: $colors.red
    font-family: Montserrat, sans-serif
    font-size: 17px
    font-weight: 700
    border: 3px solid $colors.red
    background-color: $colors.yellow
    box-shadow: none
    transition: opacity .2s

    &:hover
      opacity: .6

      @media (hover none), (hover on-demand)
        opacity: 1

    &.is-disabled
      filter: grayscale(1)
      opacity: .6
      cursor: default

      &:hover
        @media (hover none), (hover on-demand)
          opacity: .6

  &-hands
    position: absolute
    z-index: 1
    top: 5%
    bottom: 0
    margin: auto 0
    width: 200px

    @media $mq.desktop
      width: 248px
      height: 471px

    &--l
      left: 0

    &--r
      right: 0
      transform: scale(-1,1)

  &__logo
    position: absolute
    z-index: 2
    top: 10px
    right: 20px
    width: 100px
    height: 34px
    color: #000 !important
    border: 0 !important
    transition: opacity .2s

    & svg
      width: 100%
      height: 100%

    @media (min-width: 640px)
      top: 20px
      right: 30px

    ^[0].is-result &
      @media (min-width: 640px) and (max-width: 960px)
        right: calc((100% - 640px) / 2 + 30px)

    &:hover
      opacity: .6

      @media (hover none), (hover on-demand)
        opacity: 1

  &__inner
    position: relative
    z-index: 1
    display: flex
    align-items: flex-start
    width: 100%
    padding: 10px
    background-color: #fff
    //overflow: hidden

    @media (min-width: 640px)
      min-height: 600px
      border: 4px solid #000

    &--result
      width: 640px
      max-width: 100%
      padding: 0
      margin: 0 auto
      border: 0
      background-color: transparent

  &-enter
    position: relative
    z-index: 2
    width: 360px
    max-width: 100%
    margin-top: 40px

    @media (min-width: 640px)
      margin: auto 0 auto 50px

    @media $mq.desktop
      margin: auto

    &__title
      color: $colors.red
      font-family: Montserrat, sans-serif
      font-weight: 700
      font-size: 26px
      line-height: 1.355em
      text-transform: uppercase

      @media $mq.iphone6
        font-size: 31px

    &__text
      margin-top: 16px
      line-height: 1.5em
      opacity: .6

      @media $mq.iphone6
        font-size: 18px

      & p
        padding: 0
        margin: 0 !important
        font-size: inherit

        &:not(:last-child)
          margin-bottom: 0.833em !important

    &__btn
      margin-top: 20px

      @media $mq.iphone6
        margin-top: 40px

  &-q
    position: relative
    display: flex
    align-items: flex-start
    width: 100%
    height: 100%

    &__pager
      position: absolute
      top: 5px
      left: 0
      font-family: Montserrat, sans-serif
      font-size: 18px
      font-weight: 700

      @media (min-width: 640px)
        top: 15px
        left: 20px

    &__inner
      position: relative
      margin: 40px auto 0

      @media (min-width: 640px)
        width: 560px
        max-width: 100%
        min-height: 442px
        margin-top: 60px

    &__promo
      position: absolute
      z-index: 4
      top: 0
      bottom: 0
      left: 0
      right: 0
      width: 100%
      height: 100%
      background-color: rgba(255,255,255,.9)

    &__promo-inner
      position: absolute
      z-index: 1
      top: 50%
      left: 50%
      transform: translate3d(-50%,-50%,0)
      width: 320px
      max-width: 100%
      padding: 20px 26px 22px
      border: 4px solid #000
      background-color: #fff

    &__promo-btn
      width: 82px
      height: 26px
      padding: 0 10px
      margin: 16px 0 0
      color: #000
      font-size: 12px
      border: 1px solid #000
      background-color: #fff
      transition color .2s, background-color .2s

      &:hover
        color: #fff
        background-color: #000

        @media (hover none), (hover on-demand)
          color: #000
          background-color: #fff

    &__promo-text
      color: #000
      font-size: 12px
      line-height: 1.5em

      & p
        padding: 0
        margin: 0 !important
        font-size: inherit

        &:not(:last-child)
          margin-bottom: 0.833em !important

      & a
        color: currentColor !important
        border-bottom: 1px solid currentColor !important
        transition opacity .2s

        &:hover
          opacity: .6

          @media (hover none), (hover on-demand)
            opacity: 1

    &__body
      width: 310px
      max-width: 100%

    &__label
      margin-bottom: 6px
      color: #999

      &--options
        margin-bottom: 10px
        text-align: center

        @media (min-width: 640px)
          text-align: left

      &:not(:first-child)
        margin-top: 20px

    &__title
      color: $colors.red
      font-family: Montserrat, sans-serif
      font-size: 20px
      font-weight: 700
      line-height: 1.45em

    &__subtitle
      color: #333
      font-size: 18px
      line-height: 1.6em

    &__lot
      position: relative
      width: 225px
      margin: 20px auto 0

      @media (min-width: 640px)
        position: absolute
        top: 0
        right: 0
        margin: 0

    &__options
      display: flex
      justify-content: center

      @media (min-width: 640px)
        justify-content: flex-start

    &__btn
      margin-top: 20px
      text-align: center

      @media (min-width: 640px)
        text-align: left

    &__notice
      width: 160px
      max-width: 100%
      min-height: 48px
      margin: 10px auto 0
      color: #808080
      font-size: 14px
      text-align: center

  &-options
    display: flex
    flex-direction: column
    flex-wrap wrap
    //width: 254px
    width: 206px
    height: 110px
    margin: -12px 0 0 -40px

    &__item
      padding: 12px 0 0 40px

  &-option
    position: relative
    display: inline-block
    color: #000
    cursor: pointer

    &.is-active
      color: $colors.red

    &__btn
      position: absolute
      z-index: 1
      top: 3px
      left: 0
      width: 16px
      height: 16px
      border: 2px solid currentColor
      border-radius: 100%

      ^[-1].is-active &
        &::after
          content: ''
          position: absolute
          top: 0
          bottom: 0
          left: 0
          right: 0
          margin: auto
          width: 8px
          height: 8px
          border-radius: 100%
          background-color currentColor

    &__label
      margin-left: 30px
      font-size: 18px

  &-lot
    border: 4px solid currentColor

    &__body
      position: relative
      height: 260px
      background-color: $colors.yellow
      background-image: url('https://leonardo.osnova.io/f4966422-246f-7497-2568-5b47f689318a/')
      background-position: center calc(100% + 20px)
      background-repeat: no-repeat

      @media (min-width: 640px)
        height: 306px
        background-position: center bottom

    &__img
      position: absolute
      z-index: 2
      bottom: 50px
      transform: translate3d(0,0,0)
      transform-style: preserve-3d

      &--1
        left: 55px
        width: 105px

      &--2
        left: 68px
        width: 80px

      &--3
        bottom: 44px
        left: 60px
        width: 90px

      &--4
        left: 6px
        width: 206px

      &--5
        left: 22px
        width: 172px

      &--6
        left: 18px
        width: 177px

      &--7
        left: 6px
        width: 206px

      &--8
        left: 22px
        bottom: 34px
        width: 162px

      @media (min-width: 640px)
        bottom: 70px

        &--3
          bottom: 64px

        &--8
          bottom: 56px

    &__bottom
      display: flex
      justify-content: center
      align-items: flex-end
      height: 50px
      padding-bottom: 12px
      background-color: #000

      @media (min-width: 640px)
        height: 70px
        padding-bottom: 20px

    &__price
      margin-bottom: -2px
      color: $colors.yellow
      font-family: Montserrat, sans-serif
      font-size: 28px
      font-weight: 700
      line-height: 1

      &--old
        margin-right: 8px
        margin-bottom: 0
        font-size: 14px
        text-decoration: line-through

      &--new
        color: $colors.red

        &::after
          content: '.-'

  &-crane
    position: absolute
    z-index: 3
    top: 0
    left: 0
    right: 0
    margin: 0 auto
    width: 58px
    height: 97px
    transform: translate3d(0,0,0)
    transform-style: preserve-3d
    transition: transform 1s

    &--back
      z-index: 1

    &::before
      content: ''
      position: absolute
      bottom: 100%
      left: 0
      right: 0
      margin: 0 auto
      width: 2px
      height: 500px
      background-color: #FF0C0C
      transform: translate3d(0,0,0)
      transform-style: preserve-3d

    &__grabber
      position: relative
      z-index: 2
      display: block
      width: 100%
      transform: translate3d(0,0,0)
      transform-style: preserve-3d

    &__claw
      position: absolute
      z-index: 1
      transform: translate3d(0,0,0)
      transform-style: preserve-3d

      &--b
        width: 8px
        top: 86px
        right: 8px

      &--l
        width: 36px
        top: 80px
        left: -32px
        transform-origin: top right

      &--r
        width: 29px
        top: 78px
        right: -19px
        transform-origin: top left

  &-result
    max-width: 100%

    &__main

      @media (min-width: 640px)
        border: 4px solid #000

    &__bottom
      margin-top: 8px
      padding: 10px 14px
      background-color: #fff

      @media (min-width: 640px)
        border: 5px solid #000

      @media $mq.not_mobile
        padding: 40px 65px 45px

    &__block
      position: relative
      padding: 50px 20px 10px
      background-color: #fff
      overflow: hidden

      @media $mq.not_mobile
        padding: 35px 20px 20px 60px

      &--a
        padding: 10px 20px
        background-color: #000

        @media $mq.not_mobile
          min-height: 220px
          padding: 35px 20px 20px 60px

    &__img
      position: absolute
      bottom: 0
      right: 0
      width: 41%
      max-width: 169px

      &--a
        top: 0
        bottom: auto
        width: 35%
        max-width: 150px

    &__title
      position: relative
      z-index: 1
      font-family: Montserrat, sans-serif
      font-size: 20px
      font-weight: 700
      line-height: 1.5em

      @media $mq.iphone6
        font-size: 22px

      @media (min-width: 480px)
        font-size: 24px

      @media $mq.not_mobile
        font-size: 30px

      &--a
        color: #fff

    &__share
      position: relative
      z-index: 1
      margin-top: 14px
      color: #fff

      &--dark
        color: #000

    &__restart
      position: relative
      z-index: 1
      display: inline-flex
      align-items: center
      margin-top: 22px
      color: #000
      line-height: 1
      cursor: pointer
      opacity: .65
      transition: opacity .2s

      &--a
        color: #fff

      & svg
        margin-left: 5px

      &:hover
        opacity: 1

        @media (hover none), (hover on-demand)
          opacity: .65

    &__text
      color: #000
      line-height: 1.5em

      & p
        padding: 0
        margin: 0 !important
        font-size: inherit

        &:not(:last-child)
          margin-bottom: 0.833em !important

      & a
        color: currentColor !important
        border-bottom: 1px solid currentColor !important
        transition opacity .2s

        &:hover
          opacity: .6

          @media (hover none), (hover on-demand)
            opacity: 1

    &__btn
      display: inline-flex
      justify-content: center
      align-items: center
      min-width: 170px
      height: 45px
      padding: 0 10px
      margin-top: 20px
      color: #000 !important
      font-family: Montserrat, sans-serif
      font-weight: 700
      line-height: 1
      border: 3px solid #000 !important
      transition opacity .2s

      @media $mq.not_mobile
        margin-top: 30px

      &:hover
        opacity: .6

        @media (hover none), (hover on-demand)
          opacity: 1

  .likely
    &--custom
      display: flex

    &__widget
      flex-shrink: 0
      display: flex
      align-items: center
      justify-content: center
      min-width: 58px
      height: 44px
      color: currentColor
      border: 1px solid currentColor
      background-color: transparent
      cursor: pointer
      transition: opacity .2s

      &:not(:last-child)
        margin-right: 10px

      &:hover
        opacity: .6

        @media (hover none), (hover on-demand)
          opacity: 1

      &--vkontakte
        padding: 0 13px 0 10px

    &__counter
      display: none

    &__icon
      background-color: transparent

      & svg
        display: block
        width: 25px
        height: @width
        fill: currentColor

      &--facebook
        & svg
          width: 20px
          height: @width

      &--vkontakte

        @media $mq.not_mobile
          margin-right: 10px

    &__button
      display: none
      line-height: 1

      @media (min-width: 480px)
        display: block